@model HRMS.Models.TimelineEvent

<script>
    $('.datepicker').datepicker({
        format: 'dd/mm/yyyy'
    });

</script>

@using (Html.BeginForm("CreateTimelineEvent", "JobOpportunity", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(x => x.Event, "Event", new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                @Html.EnumDropDownListFor(x => x.Event, "Select Event", new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.DateCreated, "Event Date", new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    @Html.TextBoxFor(x => x.DateCreated, new { @class = "form-control pull-right datepicker", required = "required" })
                </div>
                @Html.ValidationMessageFor(x => x.DateCreated)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Heading, "Heading", new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(x => x.Heading, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(x => x.Heading)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Notes, "Notes", new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(x => x.Notes, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(x => x.Heading)
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-default pull-right margin-10-left" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success pull-right margin-10-left">Save</button>
            </div>
        </div>

        @Html.HiddenFor(x => x.ApplicantId)

    </div>
}
