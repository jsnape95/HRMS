<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title>
        @ViewBag.Title - Central Administration
    </title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
@*@Html.Partial("_LoginPartial")*@
<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->    
    
    @{ Html.RenderAction("_HeaderPartial", "Home"); }
    
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">                
                <ul class="sidebar-menu">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Employee")">
                                <i class="fa fa-users"></i> <span>Employees</span>
                            </a>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-briefcase"></i>
                                <span>Job Opportunities</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("Index", "JobOpportunity")"><i class="fa fa-building"></i> Vacancies</a></li>
                                @*<li><a href="@Url.Action("ViewApplicants", "JobOpportunity")"><i class="fa fa-user-plus"></i> Applicants</a></li>*@
                            </ul>
                        </li>
                    }
                    

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-globe"></i>
                            <span>Holidays</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "Holiday")"><i class="fa fa-plus"></i> Holiday Request</a></li>
                            @*<li><a href="@Url.Action("ViewCalendar", "Holiday")"><i class="fa fa-calendar"></i> View Calander</a></li>*@
                        </ul>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="@Url.Action("Settings", "Account")">
                                <i class="fa fa-cog"></i> <span>Settings</span>
                            </a>
                        </li>
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewBag.Title
                </h1>
                @RenderSection("Breadcrumbs", required: false)
                
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.1 + Jquery UI 1.10.4 -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/AdminLTE")
    @RenderSection("Scripts", false)
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="../../Content/AdminLTE/js/AdminLTE/dashboard.js" type="text/javascript"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../Content/AdminLTE/js/AdminLTE/demo.js" type="text/javascript"></script>
</body>
</html>
