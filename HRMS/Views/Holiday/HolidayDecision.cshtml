@model HRMS.Models.EmployeeHolidayLink

<script>


</script>

@using (Html.BeginForm("HolidayDecision", "Holiday", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
                <table class="table table-bordered table-responsive">
                    <tr>
                        <th width="40%">Start Date:</th>
                        <td>@Model.Holiday.StartDate.ToLongDateString() @Model.Holiday.StartDate.ToLongTimeString()</td>
                    </tr>
                    <tr>
                        <th>End Date:</th>
                        <td>@Model.Holiday.EndDate.ToLongDateString() @Model.Holiday.EndDate.ToLongTimeString()</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-default pull-right margin-10-left" data-dismiss="modal">Close</button>
                @if (Model.Approved == HRMS.Models.ApprovedStatus.Approved)
                {
                    <button type="submit" class="btn btn-danger pull-right margin-10-left" name="cancel">Cancel Holiday</button>
                }
                else
                {
                    <button type="submit" class="btn btn-danger pull-right margin-10-left" name="reject">Reject</button>
                    <button type="submit" class="btn btn-success pull-right margin-10-left" name="accept">Accept</button>
                }
            </div>
        </div>

        @Html.HiddenFor(x => x.EmployeeHolidayLinkId)
        @Html.HiddenFor(x => x.EmployeeId)
        @Html.HiddenFor(x => x.HolidayId)

    </div>
}